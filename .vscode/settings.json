{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue-html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "css.validate": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "vue"],
  "eslint.options": {
    "configFile": "frontend/.eslintrc.js"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "typescript.tsdk": "frontend/node_modules/typescript/lib",
  "volar.tsPlugin": true,
  "volar.tsPluginStatus": false,
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv",
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.sortImports.args": [
    "--settings-path=${workspaceFolder}/backend/setup.cfg"
  ],
  "python.linting.flake8Args": [
    "--config=${workspaceFolder}/backend/setup.cfg"
  ],
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.memory.keepLibraryAst": true,
  "python.analysis.stubPath": "${workspaceFolder}/backend/typings",
  "python.analysis.cacheFolderPath": "${workspaceFolder}/backend",
  "explorer.autoReveal": false,
  "eslint.workingDirectories": ["./frontend"],
  "prettier.configPath": "frontend/.prettierrc.json",
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--follow-imports=silent",
    "--show-column-numbers",
    "--config-file ${workspaceFolder}/backend/setup.cfg"
  ],
  "python.analysis.completeFunctionParens": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.autoComplete.addBrackets": true
}
